@model PersonModel
@{
    ViewData["Title"] = "Confirme o apagar";
}


<h2> Deseja realmente deletar o usuário @Model.Name ?</h2>

<div>
<a class="btn btn-danger w-100" role="button"
    asp-action="Index" asp-controller="Person"> Cancelar </a>
<a  class="btn btn-primary w-100 mt-3" role="button"
    asp-action="Delete" asp-controller="Person" asp-route-id="@Model.Id"> Confirmar </a>
</div>